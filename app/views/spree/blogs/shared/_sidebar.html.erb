<div class="post-sidebar four columns eightOnLandscape" data-hook="post-sidebar">

  <h6 class="sidebarTitle"><%= t('.recent_posts') %></h6>  <!-- h3 --> 
  <%= render 'spree/blogs/shared/archive', :posts => @archive_posts %>
  
  <p class="badgeList sideList1 filterList more mt0 mb1lh"><%= link_to t('.view_archive'), archive_posts_path(@blog) %></p>
  
  <div class="post-categories" data-hook="post-categories">
    <h6 class="sidebarTitle"><%= t('.categories') %></h6>
    <ul class="badgeList sideList1 filterList1">
      <% @post_categories.each do |category| %>
        <li><%= link_to category.name, post_category_path(@blog, category.permalink) %></li>
      <% end %>
    </ul>
  </div>
  
  <div class="tag-cloud" data-hook="post-tag-cloud">
    <h6 class="sidebarTitle"><%= t('.tags') %></h6>
    <ul class="tags sideList filterList1">
      <% tag_cloud @tags, %w(neat cool rad awesome) do |tag, css_class| %>
        <li><%= link_to tag.name, search_posts_path(@blog, tag.name), :class => css_class %></li>
      <% end %>
    </ul>
  </div>
  
</div>
