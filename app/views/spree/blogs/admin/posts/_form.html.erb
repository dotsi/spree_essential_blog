<div class="alpha six columns">
  <%= f.field_container :blog_id do %>
    <%= f.label :blog_id, t("activerecord.attributes.blog.model_name") %><br />
    <%= f.select :blog_id, Spree::Blog.to_options, {}, :class => 'title select2' %>
    <%= error_message_on :post, :blog_id %>
  <% end %>

  <%= f.field_container :title do %>
    <%= f.label :title, t("activerecord.attributes.post.title") %><br />
    <%= f.text_field :title, :class => 'title' %>
    <%= error_message_on :post, :title %>
  <% end %>
</div>

<div class="omega six columns">
  <%= f.field_container :posted_at do %>
    <%= f.label :posted_at, t("activerecord.attributes.post.posted_at") %><br />
    <%= f.text_field :posted_at, :class => 'text', :value => ((l @post.posted_at, :fat => :long) unless @post.posted_at.nil?) %><br />
    <%= error_message_on :post, :posted_at %>
  <% end %>
</div>

<div class="clear"></div>

<%= f.field_container :body do %>
  <%= f.label :body, t("activerecord.attributes.post.body") %><%= markdown_helper %><br />
  <%= f.text_area :body  %>
  <%= error_message_on :post, :body %>
<% end %>

<%= f.field_container :tag_list do %>
  <%= f.label :tag_list, t("activerecord.attributes.post.tags") %><br />
  <%= f.text_field :tag_list, :class => 'text' %><br />
  <%= error_message_on :post, :tag_list %>
<% end %>

<%= f.field_container :live do %>
  <%= f.check_box :live  %> <%= f.label :live, t("activerecord.attributes.post.live") %><br />
<% end %>

<% content_for :head do %>
  <script type="text/javascript">
    $(document).ready(function() {
      $('#post_posted_at').autodate();
      $('#post_body').markItUp(markdownSettings);
    });
  </script>
<% end %>
